<%- include('./partials/header') %>

<!-- Swiper CSS -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css"
/>

<div class="w-full h-screen flex items-start px-20 py-20 gap-10">
  <!-- Carousel Section -->
  <div class="w-[30%] rounded-md overflow-hidden">
    <div class="swiper mySwiper h-[600px]">
      <div class="swiper-wrapper">
        <% user.cart.forEach((item) => { %>
        <div class="swiper-slide">
          <div class="w-full rounded-md overflow-hidden">
            <!-- Product Image -->
            <div
              class="w-full flex items-center justify-center h-80 bg-[<%= item.productId.bgColor %>]"
            >
              <img
                class="h-[18rem]"
                src="data:image/jpeg;base64,<%= item.productId.image.toString('base64') %>"
                alt="product image"
              />
            </div>

            <!-- Name + Quantity -->
            <div
              class="w-full flex justify-between px-5 py-4 bg-[<%= item.productId.panelColor %>]"
            >
              <h3 class="text-2xl"><%= item.productId.name %></h3>
              <div class="flex items-center gap-2">
                <i
                  class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"
                ></i>
                <div class="px-2 py-1 rounded-md bg-white text-black">
                  <%= item.quantity %>
                </div>
                <i
                  class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"
                ></i>
              </div>
            </div>

            <!-- Subtotal + Remove Button -->
            <div
              class="flex flex-col gap-2 text-white items-start px-5 py-3 bg-[<%= item.productId.textColor %>]"
            >
              <div class="w-full flex justify-between">
                <h4 class="text-lg">Subtotal</h4>
                <h2 class="text-lg">
                  $ <%= ((item.productId.price - item.productId.discount) *
                  item.quantity).toFixed(2) %>
                </h2>
              </div>

              <!-- üóëÔ∏è Remove from cart -->
              <form
                method="POST"
                action="/cart/remove/<%= item.productId._id %>"
              >
                <button
                  class="group bg-[<%= item.productId.textColor %>] text-white px-44 py-1 rounded-md text-sm hover:text-red-400"
                >
                  Remove product
                  <span
                    class="opacity-0 group-hover:opacity-100 transition-opacity"
                  >
                    üóëÔ∏è</span
                  >
                </button>
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>

  <!-- Price Breakdown Section -->
  <div class="w-[70%]">
    <h3 class="text-xl">Price Breakdown</h3>
    <div class="px-10 mt-5">
      <% user.cart.forEach((item) => { const discountedPrice =
      item.productId.price - item.productId.discount; const subtotal =
      discountedPrice * item.quantity; %>
      <div class="mt-4">
        <h4 class="text-lg font-bold mb-2"><%= item.productId.name %></h4>

        <div class="flex mt-2">
          <h4 class="w-1/3">Original Price</h4>
          <h4>$ <%= item.productId.price.toFixed(2) %></h4>
        </div>

        <div class="flex mt-2">
          <h4 class="w-1/3">Discount</h4>
          <h4>$ <%= item.productId.discount.toFixed(2) %></h4>
        </div>

        <div class="flex mt-2">
          <h4 class="w-1/3">Price After Discount</h4>
          <h4>$ <%= discountedPrice.toFixed(2) %></h4>
        </div>

        <div class="flex mt-2">
          <h4 class="w-1/3">Service Fee</h4>
          <h4>$ 0.24</h4>
        </div>

        <div class="flex mt-2">
          <h4 class="w-1/3">Shipping</h4>
          <h4>FREE</h4>
        </div>

        <div class="w-full h-[1px] bg-gray-300 my-4"></div>
      </div>
      <% }) %>
    </div>

    <!-- Total Calculation -->
    <div class="flex mt-5">
      <h3 class="w-1/3 text-xl">Total</h3>
      <h3 class="font-semibold text-xl text-green-600">
        $ <%= user.cart.reduce((total, item) => { const discountedPrice =
        item.productId.price - item.productId.discount; return total +
        (discountedPrice * item.quantity) + 0.24; }, 0).toFixed(2) %>
      </h3>
    </div>
  </div>
</div>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
<script>
  const swiper = new Swiper(".mySwiper", {
    direction: "vertical",
    slidesPerView: 1,
    spaceBetween: 30,
    mousewheel: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
  });
</script>

<%- include('./partials/footer') %>
