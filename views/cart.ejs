<%- include('./partials/header') %>
<div class="w-full h-screen flex items-start px-20 py-20 gap-10">
  <div class="w-[30%] rounded-md overflow-hidden">
    <div
      class="w-full flex items-center justify-center h-80 bg-[<%= user.cart[0].productId.bgColor %>]"
    >
      <img
        class="h-[18rem]"
        src="data:image/jpeg;base64,<%= user.cart[0].productId.image.toString('base64') %>"
        alt="product image"
      />
    </div>
    <div
      class="w-full flex justify-between px-5 py-4 bg-[<%= user.cart[0].productId.panelColor %>]"
    >
      <h3 class="text-2xl"><%= user.cart[0].productId.name %></h3>
      <div class="flex items-center gap-2">
        <i
          class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"
        ></i>
        <div class="px-2 py-1 rounded-md bg-white text-black"><%= user.cart[0].quantity %></div>
        <i
          class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"
        ></i>
      </div>
    </div>
    <div
      class="flex text-white items-center justify-between px-5 py-3 bg-[<%= user.cart[0].productId.textColor %>]"
    >
      <h4 class="text-lg">Subtotal</h4>
      <h2 class="text-lg">$ <%= (user.cart[0].productId.price * user.cart[0].quantity).toFixed(2) %></h2>
    </div>
  </div>
  <div class="w-[70%]">
    <h3 class="text-xl">Price Breakdown</h3>
    <div class="px-10 mt-5">
      <div class="flex mt-2">
        <h4 class="w-1/3">Item Price</h4>
        <h4>$ <%= user.cart[0].productId.price.toFixed(2) %></h4>
      </div>
      <div class="flex mt-2">
        <h4 class="w-1/3">Discount</h4>
        <h4>$ <%= user.cart[0].productId.discount.toFixed(2) %></h4>
      </div>
      <div class="flex mt-2">
        <h4 class="w-1/3">Service Fee</h4>
        <h4>$ 0.24</h4>
      </div>
      <div class="flex mt-2">
        <h4 class="w-1/3">Shipping</h4>
        <h4>FREE</h4>
      </div>
    </div>
    <div class="w-full h-[1px] bg-black mt-10"></div>
    <div class="flex mt-5">
      <h3 class="w-1/3 text-xl">Total</h3>
      <h3 class="font-semibold text-xl text-green-600">
        $ <%= ((user.cart[0].productId.price * user.cart[0].quantity) + 0.24).toFixed(2) %>
      </h3>
    </div>
    <form action=""></form>
  </div>
</div>
<%- include('./partials/footer') %>
